<!-- Top-level content view for the simple fragment sample. -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:padding="4dip"
     android:layout_width="match_parent" android:layout_height="match_parent"
     android:background="#ffffff">



        <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="left|top"
                android:text="Quantas repetições?"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10px"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/background_dark"/>


    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0"
            android:layout_gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="top|center_horizontal"
            android:text="Quantas séries?"
            android:layout_below="@+id/text"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/background_dark"/>

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="left|top"
            android:text="Quantas repetições?"
            android:layout_below="@+id/textView"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/background_dark"/>

    <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/ok"
            android:layout_below="@+id/textView6"
            android:layout_toRightOf="@+id/button2"
            android:textColor="@android:color/background_dark">

        <requestFocus/>
    </Button>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="03"
            android:id="@+id/repiticoes"
            android:layout_alignTop="@+id/text"
            android:textColor="#0b0b0b"
            android:layout_alignRight="@+id/button2"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/textView"
            android:layout_alignRight="@+id/repiticoes"
            android:textColor="#0b0b0b"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignRight="@+id/button"
            android:textColor="#0b0b0b"/>

    <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/cancel"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:textColor="@android:color/background_dark">

        <requestFocus/>
    </Button>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repeatDecrease"
            android:layout_toLeftOf="@+id/repiticoes"
            android:layout_alignBottom="@+id/repiticoes"
            android:src="@drawable/arrow_left"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repeatIncrease"
            android:layout_alignTop="@+id/repeatDecrease"
            android:layout_toRightOf="@+id/button"
            android:layout_alignBottom="@+id/repiticoes"/>

</RelativeLayout>
