<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    android:theme="@style/Theme.AppCompat.Light">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/imgBtnTrain"
                android:background="@drawable/menu_bt_treinar"
                android:onClick="onClickTrain" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/imgBtnResults"
                android:background="@drawable/menu_bt_meta"
                android:onClick="onClickSegundo"/>

        </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/imgBtnFriends"
                    android:background="@drawable/menu_bt_evolucao"
                    android:onClick="onEvolucaoClick"/>

                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/imgBtnMyGym"
                    android:background="@drawable/menu_bt_minha_academia"
                    android:onClick="onMinhaAcademiaClick"/>

            </TableRow>
        </TableLayout>

</LinearLayout>