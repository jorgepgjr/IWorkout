<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_main"
    android:layout_height="match_parent">

    <TextView
        android:text="Treino:"
        android:id="@+id/textTrainSelecioneTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffda7314"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:text="Nome do treino"
        android:id="@+id/nomeTreinoTrainDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTrainSelecioneTreino"
        android:layout_alignLeft="@+id/textTrainSelecioneTreino"
        android:layout_alignStart="@+id/textTrainSelecioneTreino"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeTreinoTrainDetails"
        android:layout_alignLeft="@+id/textTrainSelecioneTreino"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/trainDetailsAdd" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/nomeTreinoTrainDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/div_barra_completa" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/train_btn_add_exercise"
        android:id="@+id/trainDetailsAdd"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:onClick="addExercicioClick" />

</RelativeLayout>