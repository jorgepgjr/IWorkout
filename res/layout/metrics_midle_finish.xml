<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/middle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:layout_below="@id/title">

    <TextView
        android:id="@+id/parabens"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="PARABÉNS!"
        android:gravity="center"
        android:textSize="20dip"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="O seu ponto de partida foi defenido. Agora mãos na massa e vamos aos treinos. Boa sorte!"
        android:gravity="center"
        android:textSize="20dip"
        android:layout_marginBottom="50dp"
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/question"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Lembrando que estamos acompanhando a sua evolução."
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#ff000000" />


    <Button
        android:id="@+id/btnVamos"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_finalizar"
        android:onClick="ok"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>