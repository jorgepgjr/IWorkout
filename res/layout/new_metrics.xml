<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/middle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:layout_below="@id/title"
    android:background="@drawable/bg_main"
    android:theme="@style/Theme.AppCompat.Light">


    <TextView
        android:id="@+id/sub_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Qual o seu peso(kg)?"
        android:gravity="center"
        android:textSize="20dip"
        android:layout_marginBottom="10dp"
        android:textColor="#ff000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <br.com.iworkout.components.CustomEditText
            android:id="@+id/new_peso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:value="40"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sub_title2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Qual a medida do seu peitoral(cm)?"
        android:gravity="center"
        android:textSize="20dip"
        android:layout_marginBottom="10dp"
        android:textColor="#ff000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <br.com.iworkout.components.CustomEditText
            android:id="@+id/peitoral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:value="40" />
    </LinearLayout>

    <TextView
        android:id="@+id/sub_title3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Qual a medida da sua cintura(cm)?"
        android:gravity="center"
        android:textSize="20dip"
        android:layout_marginBottom="10dp"
        android:textColor="#ff000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <br.com.iworkout.components.CustomEditText
            android:id="@+id/cintura"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:value="50" />
    </LinearLayout>

    <TextView
        android:id="@+id/sub_title4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Qual a medida da sua perna(cm)?"
        android:gravity="center"
        android:textSize="20dip"
        android:layout_marginBottom="10dp"
        android:textColor="#ff000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <br.com.iworkout.components.CustomEditText
            android:id="@+id/coxa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:value="50" />
    </LinearLayout>

    <TextView
        android:id="@+id/sub_title5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Qual a medida do seu biceps(cm)?"
        android:gravity="center"
        android:textSize="20dip"
        android:layout_marginBottom="10dp"
        android:textColor="#ff000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <br.com.iworkout.components.CustomEditText
            android:id="@+id/braco"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:value="50" />
    </LinearLayout>


    <!--BotÃµes -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVamos"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/bg_laranja"
            android:text="OK"
            android:onClick="ok" />
    </LinearLayout>

</LinearLayout>