<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_main"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IconeMonitoreTreino"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:maxWidth="42dp"
        android:scaleType="fitXY"
        android:maxHeight="42dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/peso" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/IconeMonitoreTreino"
        android:text="@string/choose_your_train"
        android:id="@+id/textTrainSelecioneTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTrainSelecioneTreino"
        android:layout_above="@+id/button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/button"
        android:onClick="onClickNewTrain"
        android:background="@drawable/train_btn_cadastrar_novo"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout><!-- From: file:/home/jorge/workspace/IWorkout/res/layout/train.xml -->