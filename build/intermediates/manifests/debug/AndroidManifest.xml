<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.iworkout"
    android:versionCode="1"
    android:versionName="1.0-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <!-- Connect to Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iworkout_icon"
        android:label="@string/app_name"
        android:theme="@style/AppThemeTest" >
        <activity
            android:name="br.com.iworkout.activity.ApresentationActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.iworkout.activity.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ApresentationActivity" />
        </activity>
        <activity
            android:name="br.com.iworkout.activity.TrainActivity"
            android:parentActivityName="br.com.iworkout.activity.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>
        <activity
            android:name="br.com.iworkout.activity.ChooseMuscleActivity"
            android:parentActivityName="br.com.iworkout.activity.TrainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TrainActivity" />
        </activity>
        <activity
            android:name="br.com.iworkout.activity.ChooseExercicioActivity"
            android:parentActivityName="br.com.iworkout.activity.ChooseMuscleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChooseMuscleActivity" />
        </activity>
        <activity
            android:name="br.com.iworkout.activity.ChooseSerieActivity"
            android:parentActivityName="br.com.iworkout.activity.ChooseExercicioActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChooseExercicioActivity" />
        </activity>
        <activity
            android:name="br.com.iworkout.activity.NewTrainActivity"
            android:parentActivityName="br.com.iworkout.activity.NewTrainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewTrainActivity" />
        </activity>
        <activity
            android:name="br.com.iworkout.activity.TrainDetailsActivity"
            android:parentActivityName="br.com.iworkout.activity.TrainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewTrainActivity" />
        </activity>
        <activity
            android:name="br.com.iworkout.activity.CreateTrainDetailsActivity"
            android:parentActivityName="br.com.iworkout.activity.TrainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewTrainActivity" />
        </activity>
        <activity
            android:name="br.com.iworkout.activity.LoginActivity"
            android:parentActivityName="br.com.iworkout.activity.TrainActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MetricsActivity" />
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="br.com.iworkout.activity.MetricsActivity"
            android:parentActivityName="br.com.iworkout.activity.ApresentationActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ApresentationActivity" />
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
    </application>

</manifest>